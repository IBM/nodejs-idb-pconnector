{
  "npm": {
    "publish": false
  },
  "git": {
    "commitMessage": "chore: release ${version}",
    "push": false
  },
  "github":{
    "release": false,
    "releaseName": "${version}"
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": "conventionalcommits",
      "infile": "CHANGELOG.md",
      "ignoreRecommendedBump": true
    }
  }
}